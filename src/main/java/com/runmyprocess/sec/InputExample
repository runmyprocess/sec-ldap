                          ]
    } 
}

##MODIFY
{
"protocol":"LDAP",
"data":{
        "operation":"MODIFY",
        "userDN":"cn=admin,dc=example,dc=com",
        "password":"password",
        "ldif": [
                 "dn: dc=example,dc=com",
     		 "changetype: modify",
     		 "replace: description",
    		 "description: MODIFY Example"     
                          ]
    } 
}

