"data":{
        "operation":"ADD",
        "userDN":"cn=admin,dc=example,dc=com",
        "password":"password",
        "ldif": [
                                "dn: cn=Malcolm Haslam,ou=People,dc=example,dc=com",
                                "cn: Malcolm Haslam",
